<system.diagnostics>
  <trace autoflush="true" indentsize="2" />
  <sharedListeners>
  <!--
  Possible values for source levels: Off, Critical, Error, Warning, Information, Verbose, ActivityTracing, All
  -->
        <add name="fileLog"
             type="Com.Gmail.Birklid.Ray.Diagnostics.RollingFileTraceListener,Core.Library" initializeData="Tipsy.log">
            <filter type="System.Diagnostics.EventTypeFilter"
                initializeData="All" />
        </add>
    <add name="consoleLog"
         type="System.Diagnostics.ConsoleTraceListener">
      <filter type="System.Diagnostics.EventTypeFilter"
              initializeData="Off" />
    </add>
    </sharedListeners>
    <sources>
      <!-- ******************************************************************************** -->
      <!-- SOURCE: Application                                                              -->
      <!-- ******************************************************************************** -->
      <source name="Application"
              switchValue="All">
        <listeners>
          <remove name="default" />
          <add name="fileLog" />
          <add name="consoleLog" />
        </listeners>
      </source>

      <!-- ******************************************************************************** -->
      <!-- SOURCE: Controller                                                               -->
      <!-- ******************************************************************************** -->
      <source name="Controller"
              switchValue="All">
        <listeners>
          <remove name="default" />
